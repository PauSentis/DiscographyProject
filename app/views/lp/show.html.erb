<div class="col-lg-9">
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= image_tag @lp.url, :size =>"250x250"%>
      <h2 class="padd"> <%= @lp.name %> </h2>
      <p class="padd"> <%= @lp.description %> </p>
      <div>
        <%= link_to 'Artist', {:controller => "artist", :action => :show, :id =>@lp.artist}, :method => :get%>
      </div>
      <div>
        <%= link_to 'Edit LP', {:action => :edit, :id =>@lp}, :method => :get%>
      </div>
      <div>
        <%= link_to 'Remove LP', {:controller => "lp", :action => :delete, :id =>@lp}, {:method => :delete}%>
      </div>
    </div>
  </div>
</div>
</div>
